{% extends "base.njk" %}

{% block metaStuff%}
	<title>Home</title>
	<link href="gift-ee.css", type="text/css", rel="stylesheet">
{% endblock %}

{% block main %}
	<h1>Gift-ee!</h1>
	<div class="slideShow">
		<div class="slide">
			<h2>Build your own gift list!</h2>
			<p>
				Don't be tied up to managing multiple website store's wish lists. Gift-ee lets you manage one 
				gift list and can include items from any number of online stores no matter how obscure they are!
			</p>
			<div class="store-logos">
				<img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcQOVmfT_FI76xMfnYymgTnJF6zFxVYmBDGtwkmAY3jrBU_icaI2&usqp=CAU", alt="amazon">
				<img src="https://logodix.com/logo/881341.jpg", alt="steam"/>
				<img src="https://s3.amazonaws.com/images.gearjunkie.com/uploads/2019/11/backcountry-logo1.jpg" alt="backcountry">
				<img src="https://1000logos.net/wp-content/uploads/2017/03/Nike-Logo.png" alt="nike">
				<img src="https://cdn.thecollegeinvestor.com/wp-content/uploads/2013/04/JCPenny-Logo.jpg", alt="jcp">
			</div>
			<i class="fas fa-chevron-down"></i><br>
			<i class="fas fa-gift"></i>
		</div>
		<div class="slide", style="display: none;">
			<h2>Creating your own gift list is easy!</h2>
			<img src="https://raw.githubusercontent.com/AGuyNamedC-Los/gift-ee/master/public/website_gifs/gift-list_demo.gif" alt="demo">
		</div>
		<div class="slide", style="display: none;">
			<h2>An intuitive and easy to navigate gift list!</h2>
			<img src="https://raw.githubusercontent.com/AGuyNamedC-Los/gift-ee/master/public/website_gifs/gift-list_demo.gif" alt="demo">
		</div>
		<div class="slide", style="display: none;">
			<h2>Share your gift list with your friends and family!</h2>
			<p></p>
		</div>
	</div>
	<div class="slideShow-btns">
		<button onclick="slideChoice(0)"></button>
		<button onclick="slideChoice(1)"></button>
		<button onclick="slideChoice(2)"></button>
		<button onclick="slideChoice(3)"></button>
	</div>
{% endblock %}

{% block script %}
<script>
	function slideChoice(index) {
		let slides = document.getElementsByClassName("slide");
		let slideButtons = document.getElementsByClassName("slideShow-btns")[0].getElementsByTagName("button");
		for(i = 0; i < slides.length; i++) {
			console.log(index);
			slides[i].style.display = "none";
			slideButtons[i].style.backgroundColor = "white";
		}

		slides[index].style.display = "";
		slideButtons[index].style.backgroundColor = "black";
	}
</script>
{% endblock %}